                <state_interface name="position">
                  <param name="initial_value">${initial_positions['joint_coxa_lr']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="joint_femur_lr">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['joint_femur_lr']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="joint_tibia_lr">
